<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/arrow"/>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Details Ticket"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Nama"/>
        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="match_parent"
            android:background="@drawable/bg_form"
            android:padding="5dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/nama"
            app:layout_constraintStart_toStartOf="parent"
            />

    <TextView
        android:id="@+id/dept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_nama"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Plant"/>
        <TextView
            android:id="@+id/txt_dept"
            android:layout_width="match_parent"
            android:background="@drawable/bg_form"
            android:padding="5dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/dept"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_dept"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="No Whatsapp"/>
        <TextView
            android:id="@+id/txt_whatsapp"
            android:layout_width="match_parent"
            android:background="@drawable/bg_form"
            android:padding="5dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/whatsapp"
            app:layout_constraintStart_toStartOf="parent"
            />


        <TextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_whatsapp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Nama Mesin"/>
        <TextView
            android:id="@+id/txt_line"
            android:layout_width="match_parent"
            android:background="@drawable/bg_form"
            android:padding="5dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/kode_mesin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Kode Mesin"/>
        <TextView
            android:id="@+id/txt_kode_mesin"
            android:layout_width="match_parent"
            android:background="@drawable/bg_form"
            android:padding="5dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/kode_mesin"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_kode_mesin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Status"/>
        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:background="@drawable/bg_form"
            android:padding="5dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/status"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_status"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Deskripsi"/>
        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:background="@drawable/bg_form"
            android:padding="5dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/desc"
            app:layout_constraintStart_toStartOf="parent"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="5"
            app:layout_constraintTop_toBottomOf="@id/txt_desc"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_timeline"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        tools:ignore="HardcodedText">
        <!--This will be the parent Floating Action Button-->

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/checkout_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF6965"
            android:text="Checkout"
            android:textColor="@color/white"
            app:icon="@drawable/co"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/checkin_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6BCB77"
            android:text="Checkin"
            android:textColor="@color/white"
            app:icon="@drawable/ci"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toTopOf="@id/checkout_fab"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/done_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4D96FF"
            android:text="done"
            android:textColor="@color/white"
            app:icon="@drawable/checked"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toTopOf="@id/checkin_fab"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/pending_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFD93D"
            android:text="pending"
            android:textColor="@color/white"
            app:icon="@drawable/crossed"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toTopOf="@id/done_fab"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <!--Floating action button for add alarm-->

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>